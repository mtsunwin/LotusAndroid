<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundNews"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/backgroundNews"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_post_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/person"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgroundNews"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/textView_post_Accountname"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@color/backgroundNews"
                    android:gravity="center|start"
                    android:hint="Account name"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textView_post_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/backgroundNews"
                    android:gravity="top|start"
                    android:textSize="11dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundNews"
            android:hint="content"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundNews"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backgroundNews"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_Like"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_likenormal"
                    android:gravity="start" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backgroundNews"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_comment"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@color/backgroundNews"
                    android:gravity="center"
                    android:src="@drawable/ic_commenting"
                    android:text="Comment"
                    android:visibility="invisible" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>