<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color50"
            android:minHeight="150dp" />

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            android:background="#f5f5f5"
            android:src="@drawable/ic_house" />

        <TextView
            android:id="@+id/txt_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="abc"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txt_summaryInfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Xin chào các bạn"
            android:textAlignment="center"
            android:textSize="15dp" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarProFile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/color100"
            android:gravity="center">

            <Button
                android:id="@+id/button_Introduce"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/color100"
                android:src="@drawable/ic_house"
                android:text="Introduce" />

            <Button
                android:id="@+id/button_album"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/color100"
                android:text="Image" />


        </android.support.v7.widget.Toolbar>
    </LinearLayout>
</layout>